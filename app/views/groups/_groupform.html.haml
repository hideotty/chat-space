= form_for @group do |f|
  .form__errors
    %h2
    -if @group.errors.any?
      "#{@group.errors.count}件のエラーがあります。"
      - @group.errors.full_messages.each do |error|
        %li
          =error

      .form__field--right
    .form__field.clearfix
      .form__field--left
        = f.label :name, "グループ名", {class: 'form__label'}
      .form__field--right
        = f.text_field :name, {class: "form__input", placeholder: "グループ名を入力してください"}
    .form__field.clerfix
      .form__field--left
        チャットメンバーを追加
        = label :search, "",{for: "chat_group_チャットメンバーを追加"}
      .form__field--right.js_incremental
        .form__search.clearfix
          %input{class: "form__input", id: "search_", placeholder: "追加したいユーザー名を入力してください", type: "text"}
    .form__field.clerfix
      .form__field--left
        チャットメンバー
      .form__field--right
        .form__field--righttext
          %p#user-search-result
            = current_user.name
    .form__field.clerfix
      .form__field--left
      .form__field--right
        = f.submit '登録する', class: "form__action-btn"



